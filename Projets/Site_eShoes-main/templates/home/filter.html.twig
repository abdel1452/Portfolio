{% extends 'base.html.twig' %}
{% block title %}{{ subCategory.name }} - {{ category.name }}{% endblock %}

{% block body %}
<div class="container py-5">
    {# Fil d'Ariane #}
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_home') }}" class="text-decoration-none">Accueil</a></li>
            <li class="breadcrumb-item"><a href="#" class="text-decoration-none">{{ category.name }}</a></li>
            <li class="breadcrumb-item active" aria-current="page">{{ subCategory.name }}</li>
        </ol>
    </nav>

    {# En-tête de section #}
    <div class="mb-4">
        <h1 class="section-title mb-2">{{ subCategory.name }}</h1>
        <p class="text-muted">
            <i class="bi bi-tag me-2"></i>Catégorie : <strong>{{ category.name }}</strong>
            {% if products|length > 0 %}
                <span class="ms-3">
                    <i class="bi bi-box-seam me-2"></i>{{ products|length }} produit{{ products|length > 1 ? 's' : '' }} disponible{{ products|length > 1 ? 's' : '' }}
                </span>
            {% endif %}
        </p>
    </div>

    {# Grille de produits #}
    {% if products|length > 0 %}
        <div class="row g-4">
            {% for product in products %}
                <div class="col-6 col-sm-6 col-md-4 col-lg-3">
                    <div class="product-card">
                        <div class="card-img-wrapper">
                            {% if product.image %}
                                <a href="{{ path('app_home_product_show', {'id': product.id}) }}">
                                    <img src="{{ asset('uploads/images/' ~ product.image) }}" 
                                         class="card-img-top" 
                                         alt="{{ product.name }}">
                                </a>
                            {% else %}
                                <img src="{{ asset('uploads/images/no_image_available_500x350.png') }}" 
                                     class="card-img-top" 
                                     alt="Placeholder image">
                            {% endif %}
                            
                            {# Badges #}
                            <div class="product-badges">
                                <span class="badge-discount">-15%</span>
                                <span class="badge-delivery">
                                    <i class="bi bi-clock"></i>
                                    48H
                                </span>
                            </div>
                        </div>
                        
                        <div class="card-body">
                            {% set brandName = product.name|split(' ')|first %}
                            <div class="product-brand">{{ brandName }}</div>
                            <a href="{{ path('app_home_product_show', {'id': product.id}) }}" class="product-name">
                                {{ product.name }}
                            </a>
                            
                            <div class="product-price">
                                {% set originalPrice = product.price / 0.85 %}
                                <span class="price-current">à partir de {{ product.price|number_format(2, ',', ' ') }} €</span>
                                <span class="price-original">{{ originalPrice|number_format(2, ',', ' ') }} €</span>
                            </div>
                            
                            {% if product.stock > 0 %}
                                <a href="{{ path('app_cart_new', {'id': product.id}) }}" class="btn btn-dark w-100 mt-2">
                                    Ajouter au panier
                                </a>
                            {% else %}
                                <button class="btn btn-secondary w-100 mt-2" disabled>
                                    Rupture de stock
                                </button>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="text-center py-5">
            <i class="bi bi-inbox" style="font-size: 5rem; color: #ccc; margin-bottom: 1rem;"></i>
            <h3 class="mb-3">Aucun produit disponible</h3>
            <p class="text-muted mb-4">Il n'y a actuellement aucun produit dans cette sous-catégorie.</p>
            <a href="{{ path('app_home') }}" class="btn btn-dark btn-lg">
                <i class="bi bi-arrow-left me-2"></i>Retour à l'accueil
            </a>
        </div>
    {% endif %}
</div>
{% endblock %}
