{% extends 'base.html.twig' %}

{% block title %}Modification sous-catégorie{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="section-title mb-0">Modifier la sous-catégorie</h1>
                <a href="{{ path('app_sub_category_index') }}" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Retour à la liste
                </a>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0"><i class="bi bi-pencil me-2"></i>Modifier les informations</h5>
                </div>
                <div class="card-body p-4">
                    {{ include('sub_category/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
                </div>
            </div>

            <div class="mt-3">
                {{ include('sub_category/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
