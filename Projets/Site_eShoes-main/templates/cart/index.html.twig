{% extends 'base.html.twig' %}
 
{% block title %}Votre Panier{% endblock %}
 
{% block body %}
<div class="container py-5">
    <h1 class="section-title mb-4">Votre Panier</h1>
    {% include 'layouts/_flash_message.html.twig' %}

    {% if items is empty %}
        <div class="text-center py-5">
            <i class="bi bi-bag-x" style="font-size: 5rem; color: #ccc; margin-bottom: 1rem;"></i>
            <h3 class="mb-3">Votre panier est vide</h3>
            <p class="text-muted mb-4">Découvrez nos produits et ajoutez-les à votre panier</p>
            <a href="{{ path('app_home') }}" class="btn btn-dark btn-lg">
                <i class="bi bi-arrow-left me-2"></i>Continuer mes achats
            </a>
        </div>
    {% else %}
        <div class="row g-4">
            <div class="col-lg-8">
                <div class="card shadow-sm">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th style="border-top: none;">Produit</th>
                                        <th style="border-top: none;">Prix unitaire</th>
                                        <th style="border-top: none;">Quantité</th>
                                        <th style="border-top: none;">Total</th>
                                        <th style="border-top: none;" class="text-end">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for item in items %}
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center gap-3">
                                                    {% if item.product.image %}
                                                        <img src="{{ asset('uploads/images/' ~ item.product.image) }}" 
                                                             alt="{{ item.product.name }}" 
                                                             style="width: 80px; height: 80px; object-fit: cover; border-radius: 8px;">
                                                    {% else %}
                                                        <img src="{{ asset('uploads/images/no_image_available_500x350.png') }}" 
                                                             alt="Placeholder" 
                                                             style="width: 80px; height: 80px; object-fit: cover; border-radius: 8px;">
                                                    {% endif %}
                                                    <div>
                                                        <strong>{{ item.product.name }}</strong>
                                                        {% if item.product.stock > 0 %}
                                                            <div class="text-success small">
                                                                <i class="bi bi-check-circle"></i> En stock
                                                            </div>
                                                        {% else %}
                                                            <div class="text-danger small">
                                                                <i class="bi bi-x-circle"></i> Rupture
                                                            </div>
                                                        {% endif %}
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="fw-bold">{{ item.product.price|number_format(2, ',', ' ') }} €</span>
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center gap-2">
                                                    <a href="{{ path('app_cart_subtract',{'id':item.product.id})}}" 
                                                       class="btn btn-outline-secondary btn-sm" 
                                                       style="width: 35px; height: 35px; padding: 0; display: flex; align-items: center; justify-content: center;">
                                                        <i class="bi bi-dash"></i>
                                                    </a>
                                                    <span class="fw-bold" style="min-width: 30px; text-align: center;">{{ item.quantity }}</span>
                                                    <a href="{{ path('app_cart_new',{'id':item.product.id})}}" 
                                                       class="btn btn-outline-success btn-sm" 
                                                       style="width: 35px; height: 35px; padding: 0; display: flex; align-items: center; justify-content: center;">
                                                        <i class="bi bi-plus"></i>
                                                    </a>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="fw-bold">{{ (item.product.price * item.quantity)|number_format(2, ',', ' ') }} €</span>
                                            </td>
                                            <td class="text-end">
                                                <a href="{{ path('app_cart_remove', {'id':item.product.id}) }}" 
                                                   class="btn btn-outline-danger btn-sm">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            {# Résumé de commande #}
            <div class="col-lg-4">
                <div class="card shadow-sm sticky-top" style="top: 100px;">
                    <div class="card-header bg-dark text-white">
                        <h5 class="mb-0"><i class="bi bi-receipt me-2"></i>Résumé de la commande</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-3">
                            <span>Sous-total</span>
                            <span class="fw-bold">{{ total|number_format(2, ',', ' ') }} €</span>
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                            <span>Livraison</span>
                            <span class="text-muted">À calculer</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between mb-4">
                            <span class="fw-bold">Total</span>
                            <span class="fw-bold" style="font-size: 1.25rem; color: var(--accent-purple);">
                                {{ total|number_format(2, ',', ' ') }} €
                            </span>
                        </div>
                        <div class="d-grid gap-2">
                            <a data-turbo="false" href="{{ path('app_order') }}" class="btn btn-dark btn-lg">
                                <i class="bi bi-credit-card me-2"></i>Valider et Payer
                            </a>
                            <a href="{{ path('app_cart_clear')}}" class="btn btn-outline-danger">
                                <i class="bi bi-trash me-2"></i>Vider le panier
                            </a>
                        </div>
                        <div class="mt-3 p-3" style="background: #f8f9fa; border-radius: 8px;">
                            <div class="d-flex align-items-center mb-2">
                                <i class="bi bi-shield-check me-2 text-success"></i>
                                <small>Paiement sécurisé</small>
                            </div>
                            <div class="d-flex align-items-center">
                                <i class="bi bi-arrow-repeat me-2 text-primary"></i>
                                <small>14 jours pour changer d'avis</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}