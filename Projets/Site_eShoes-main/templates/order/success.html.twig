{% extends 'base.html.twig' %}

{% block title %}Commande réussie{% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow-sm border-0 text-center">
                    <div class="card-body p-5">
                        <div class="mb-4">
                            <i class="bi bi-check-circle-fill" style="font-size: 5rem; color: #28a745;"></i>
                        </div>
                        <h1 class="mb-3">Commande confirmée !</h1>
                        <p class="text-muted mb-4">
                            Merci pour votre commande <strong>#{{ order.id }}</strong>
                        </p>
                        <div class="alert alert-info d-flex align-items-start mb-4">
                            <i class="bi bi-envelope me-2 mt-1"></i>
                            <div class="text-start">
                                <strong>Email de confirmation envoyé</strong><br>
                                <small>Un email avec votre facture vous a été envoyé.</small>
                            </div>
                        </div>
                        <div class="d-grid gap-2">
                            <a href="{{ path('app_home') }}" class="btn btn-dark btn-lg">
                                <i class="bi bi-house me-2"></i>Retour à l'accueil
                            </a>
                            <a href="{{ path('app_orders') }}" class="btn btn-outline-dark">
                                <i class="bi bi-list-ul me-2"></i>Voir mes commandes
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
