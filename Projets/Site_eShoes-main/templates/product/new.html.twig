{% extends 'base.html.twig' %}

{% block title %}Créer un nouveau produit{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="section-title mb-0">Créer un nouveau produit</h1>
                <a href="{{ path('app_product_index') }}" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Retour à la liste
                </a>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0"><i class="bi bi-plus-circle me-2"></i>Informations du produit</h5>
                </div>
                <div class="card-body p-4">
                    {{ include('product/_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
