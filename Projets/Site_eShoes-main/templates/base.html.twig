
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Bienvenue !{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="{{asset('asset/css/bootstrap.min.css') }}">
        {# Bootstrap Icons CDN #}
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
        <meta name="viewport" content="width=device-width, initial-scale=1">
    </head>
    <body>
        {# Barre promotionnelle supérieure #}
        <div class="promo-bar">
            <div class="container">
                <div class="row align-items-center text-center">
                    <div class="col-md-4">
                        <a href="#" class="promo-item">
                            <i class="bi bi-credit-card promo-icon" style="color: var(--accent-gold);"></i>
                            <span>Paiement en 2, 3 ou 4 fois sans frais</span>
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a href="#" class="promo-item">
                            <i class="bi bi-bell promo-icon" style="color: var(--accent-red);"></i>
                            <span>10€ Offert avec la newsletter</span>
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a href="#" class="promo-item">
                            <i class="bi bi-truck promo-icon" style="color: var(--accent-red);"></i>
                            <span>Livraison offerte dès 180€</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        {% block navbar %}
        {% include 'layouts/nav.html.twig' %}
        {% endblock %}

        {# Flash messages #}
        <div class="container mt-3">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label == 'danger' ? 'danger' : (label == 'success' ? 'success' : 'info') }} alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
                    </div>
                {% endfor %}
            {% endfor %}
        </div>

        <main style="min-height: calc(100vh - 400px);">
            {% block body %}{% endblock %}
        </main>

        {# Barre d'informations footer #}
        <div class="info-bar">
            <div class="container">
                <div class="row g-3 text-center">
                    <div class="col-6 col-md-4 col-lg">
                        <a href="#" class="info-item">
                            <i class="bi bi-check-circle-fill info-icon" style="color: #28a745;"></i>
                            <span>Produits authentiques et neufs</span>
                        </a>
                    </div>
                    <div class="col-6 col-md-4 col-lg">
                        <a href="#" class="info-item">
                            <i class="bi bi-credit-card info-icon" style="color: var(--accent-gold);"></i>
                            <span>Paiement en 3 ou 4 fois sans frais</span>
                        </a>
                    </div>
                    <div class="col-6 col-md-4 col-lg">
                        <a href="#" class="info-item">
                            <i class="bi bi-truck info-icon" style="color: var(--accent-blue);"></i>
                            <span>Livraison offerte dès 180€</span>
                        </a>
                    </div>
                    <div class="col-6 col-md-4 col-lg">
                        <a href="#" class="info-item">
                            <i class="bi bi-box-seam info-icon" style="color: #8b4513;"></i>
                            <span>14 jours pour changer d'avis!</span>
                        </a>
                    </div>
                    <div class="col-6 col-md-4 col-lg">
                        <a href="#" class="info-item">
                            <i class="bi bi-globe info-icon" style="color: var(--accent-blue);"></i>
                            <span>Expédition dans toute l'Europe</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        {# Éléments fixes #}
        <div class="fixed-chat">
            <div class="chat-bubble">
                <i class="bi bi-chat-dots"></i>
            </div>
            <a href="#" class="chat-button">Besoin d'aide ?</a>
        </div>

        <a href="#" class="scroll-top" id="scrollTop" style="display: none;">
            <i class="bi bi-arrow-up"></i>
        </a>

        {# Script pour le bouton scroll to top #}
        <script>
            window.addEventListener('scroll', function() {
                const scrollTop = document.getElementById('scrollTop');
                if (window.pageYOffset > 300) {
                    scrollTop.style.display = 'flex';
                } else {
                    scrollTop.style.display = 'none';
                }
            });

            document.getElementById('scrollTop').addEventListener('click', function(e) {
                e.preventDefault();
                window.scrollTo({ top: 0, behavior: 'smooth' });
            });
        </script>
    </body>
</html>
