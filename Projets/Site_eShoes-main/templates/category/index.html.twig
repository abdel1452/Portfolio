{% extends 'base.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="section-title mb-0">Gestion des Catégories</h1>
        <a class="btn btn-dark" href="{{ path('app_category_new') }}">
            <i class="bi bi-plus-circle me-2"></i>Nouvelle catégorie
        </a>
    </div>
    
    {% include 'layouts/_flash_message.html.twig' %}

    {% if categories|length > 0 %}
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th style="border-top: none;">ID</th>
                                <th style="border-top: none;">Nom de la catégorie</th>
                                <th style="border-top: none;" class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for category in categories %}
                                <tr>
                                    <td><strong>#{{ category.id }}</strong></td>
                                    <td>
                                        <strong style="font-size: 1.1rem;">{{ category.name }}</strong>
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group" role="group">
                                            <a class="btn btn-sm btn-outline-primary" 
                                               href="{{ path('app_category_update', {'id': category.id}) }}"
                                               title="Modifier">
                                                <i class="bi bi-pencil me-1"></i>Modifier
                                            </a>
                                            <a onclick="return confirm('Voulez-vous vraiment supprimer cette catégorie ?')" 
                                               class="btn btn-sm btn-outline-danger" 
                                               href="{{ path('app_category_delete', {'id': category.id}) }}"
                                               title="Supprimer">
                                                <i class="bi bi-trash me-1"></i>Supprimer
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    {% else %}
        <div class="text-center py-5">
            <i class="bi bi-folder-x" style="font-size: 5rem; color: #ccc; margin-bottom: 1rem;"></i>
            <h3 class="mb-3">Aucune catégorie</h3>
            <p class="text-muted mb-4">Commencez par créer votre première catégorie</p>
            <a href="{{ path('app_category_new') }}" class="btn btn-dark btn-lg">
                <i class="bi bi-plus-circle me-2"></i>Créer une catégorie
            </a>
        </div>
    {% endif %}
</div>
{% endblock %}
