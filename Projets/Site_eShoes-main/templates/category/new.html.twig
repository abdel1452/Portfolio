{% extends 'base.html.twig' %}
{% block title %}Nouvelle Catégorie{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="section-title mb-0">Créer une nouvelle catégorie</h1>
                <a href="{{ path('app_category') }}" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Retour à la liste
                </a>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0"><i class="bi bi-plus-circle me-2"></i>Informations de la catégorie</h5>
                </div>
                <div class="card-body p-4">
                    {{ form_start(categoryForm) }}
                        <div class="mb-3">
                            <label for="{{ categoryForm.name.vars.id }}" class="form-label fw-bold">Nom de la catégorie <span class="text-danger">*</span></label>
                            {{ form_widget(categoryForm.name, {
                                'attr': {
                                    'class': 'form-control form-control-lg' ~ (form_errors(categoryForm.name) ? ' is-invalid' : ''),
                                    'placeholder': 'Nom de la catégorie'
                                }
                            }) }}
                            {{ form_errors(categoryForm.name) }}
                        </div>
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-dark">
                                <i class="bi bi-check-circle me-2"></i>Enregistrer
                            </button>
                            <a href="{{ path('app_category') }}" class="btn btn-outline-secondary">
                                Annuler
                            </a>
                        </div>
                    {{ form_end(categoryForm) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
