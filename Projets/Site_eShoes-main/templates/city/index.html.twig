{% extends 'base.html.twig' %}

{% block title %}Villes{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="section-title mb-0">Gestion des Villes</h1>
        <a class="btn btn-dark" href="{{ path('app_city_new') }}">
            <i class="bi bi-plus-circle me-2"></i>Nouvelle ville
        </a>
    </div>
    
    {% include 'layouts/_flash_message.html.twig' %}

    {% if cities|length > 0 %}
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th style="border-top: none;">ID</th>
                                <th style="border-top: none;">Nom</th>
                                <th style="border-top: none;">Code postal</th>
                                <th style="border-top: none;">Frais de livraison</th>
                                <th style="border-top: none;" class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for city in cities %}
                                <tr>
                                    <td><strong>#{{ city.id }}</strong></td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-geo-alt me-2 text-muted"></i>
                                            <strong>{{ city.name }}</strong>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">{{ city.zipCode }}</span>
                                    </td>
                                    <td>
                                        <strong>{{ city.shippingCost|number_format(2, ',', ' ') }} €</strong>
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group" role="group">
                                            <a class="btn btn-sm btn-outline-primary" 
                                               href="{{ path('app_city_show', {'id': city.id}) }}"
                                               title="Afficher">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a class="btn btn-sm btn-outline-secondary" 
                                               href="{{ path('app_city_edit', {'id': city.id}) }}"
                                               title="Modifier">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    {% else %}
        <div class="text-center py-5">
            <i class="bi bi-geo-alt" style="font-size: 5rem; color: #ccc; margin-bottom: 1rem;"></i>
            <h3 class="mb-3">Aucune ville</h3>
            <p class="text-muted mb-4">Commencez par créer votre première ville</p>
            <a href="{{ path('app_city_new') }}" class="btn btn-dark btn-lg">
                <i class="bi bi-plus-circle me-2"></i>Créer une ville
            </a>
        </div>
    {% endif %}
</div>
{% endblock %}
