{% extends 'base.html.twig' %}

{% block title %}{{ city.name }}{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0"><i class="bi bi-geo-alt me-2"></i>Détails de la ville</h5>
                </div>
                <div class="card-body">
                    <table class="table table-borderless">
                        <tbody>
                            <tr>
                                <th style="width: 200px;">ID</th>
                                <td><strong>#{{ city.id }}</strong></td>
                            </tr>
                            <tr>
                                <th>Nom</th>
                                <td>
                                    <h4 class="mb-0">{{ city.name }}</h4>
                                </td>
                            </tr>
                            <tr>
                                <th>Code postal</th>
                                <td>
                                    <span class="badge bg-info p-2" style="font-size: 1rem;">
                                        {{ city.zipCode }}
                                    </span>
                                </td>
                            </tr>
                            <tr>
                                <th>Frais de livraison</th>
                                <td>
                                    <strong style="font-size: 1.25rem; color: var(--accent-purple);">
                                        {{ city.shippingCost|number_format(2, ',', ' ') }} €
                                    </strong>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="card-footer bg-light">
                    <div class="d-flex gap-2">
                        <a href="{{ path('app_city_edit', {'id': city.id}) }}" class="btn btn-primary">
                            <i class="bi bi-pencil me-2"></i>Modifier
                        </a>
                        <a href="#" onclick="history.back(); return false;" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Retour
                        </a>
                        <div class="ms-auto">
                            {{ include('city/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
